<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyStockApp"
        tools:targetApi="31">
        <activity
            android:name=".telas.Estoque"
            android:exported="false"
            android:label="@string/title_activity_estoque"
            android:theme="@style/Theme.MyStockApp" />
        <activity
            android:name=".telas.TermsLgpdActivity"
            android:exported="false"
            android:label="@string/title_activity_terms_lgpd"
            android:theme="@style/Theme.MyStockApp" />
        <activity
            android:name=".telas.PreVenda"
            android:exported="false"
            android:label="@string/title_activity_pre_venda"
            android:theme="@style/Theme.MyStockApp" />
        <activity
            android:name=".telas.BipScreen"
            android:exported="false"
            android:label="@string/title_activity_bip_screen"
            android:theme="@style/Theme.MyStockApp" /> <!-- <activity -->
        <activity
            android:name=".telas.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyStockApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".telas.Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MyStockApp" />
        <activity
            android:name=".telas.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyStockApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--                 <category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>
    </application>

</manifest>